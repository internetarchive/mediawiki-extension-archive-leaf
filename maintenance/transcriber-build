#!/bin/bash

transcriber/node_modules/.bin/node-sass --output-style compressed modules/ext.archiveleaf.common.scss > modules/ext.archiveleaf.common.css

cd transcriber
yarn build

cd build/static/js
cat <(echo "/*@nomin*/") runtime*.js <(echo) [0-9]*.js <(echo) main*.js > transcriber.js

cd ../css
cat [0-9]*.css main*.css > transcriber.css
